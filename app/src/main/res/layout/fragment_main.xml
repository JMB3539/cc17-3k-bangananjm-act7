<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nature_background"
    android:padding="20dp"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:src="@drawable/baguio"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"/>


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Discover Baguio City "
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Buttons for categories -->

    <Button
        android:id="@+id/parksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parks"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/solid_rounded_text"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/mallsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Malls"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/solid_rounded_text"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/museumsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Museums"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/solid_rounded_text"
        android:textColor="#F6F3F3"/>

    <Button
        android:id="@+id/restaurantsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/solid_rounded_text"
        android:textColor="#F6F3F3"/>

    <Button
        android:id="@+id/nightEntertainmentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Night Entertainment"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/solid_rounded_text"
        android:textColor="@color/white"/>

</LinearLayout>
